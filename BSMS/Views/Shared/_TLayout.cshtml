@using BSMS.Session;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="img/favicon.png">
    <link href="~/Content/css/jquery.sweet-modal.min.css" rel="stylesheet" />
    <title>BSMS | Admin - @ViewBag.Title </title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/css/adminPanel.css" rel="stylesheet">
    <link href="~/Content/css/sweetalert2.min.css" rel="stylesheet" />
    <script src="~/Content/js/sweetalert2.min.js"></script>
    <link href="~/Content/css/table.css" rel="stylesheet" />
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet">

    <script src="~/Content/js/jquery.js"></script>
    <link rel="stylesheet" href="~/Content/css/jquery.sweet-modal.min.css" />
    <script src="~/Content/js/jquery.sweet-modal.min.js"></script>
    <script src="~/Content/js/FormHandler.js"></script>
</head>

<body>
    <!-- container section start -->
  


        <header class="header dark-bg">
            <div class="toggle-nav">
                <div class="icon-reorder tooltips" data-original-title="Toggle Navigation" data-placement="bottom"><i class="icon_menu"></i></div>
            </div>

            <!--logo start-->
            <a class="logo">BSMS <span class="lite">Admin</span></a>
            <!--logo end-->

            <div class="nav search-row" id="top_menu">
                <!--  search form start -->
                <ul class="nav top-menu">
                    <li>
                        <form class="navbar-form">
                            <input class="form-control form-control-line" placeholder="Search" type="text">
                        </form>
                    </li>

                    <li>
                        <form class="navbar-form">
                            <a>Admin</a>
                        </form>
                    </li>

                </ul>


                <!--  search form end -->
            </div>

        </header>
        <!--header end-->
        <!--sidebar start-->
        <aside style="background-color:rgb(102, 102, 102) ">
            <div id="sidebar" class="nav-collapse ">
                <!-- sidebar menu start-->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a class="" href="index.html">
                            <i class="icon_house_alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <!--Category Navigation -->
                    <li class="sub-menu">
                        <a href='@Url.Action("Index","Category")' class="">
                            <i class="glyphicon glyphicon-tags" aria-hidden="true"></i>
                            <span>Category</span>
                       
                        </a>
                    </li>
                    <!--End Category Navigation -->


                    <!--Genre Navigation -->
                    <li class="sub-menu">
                        <a href='@Url.Action("Index","Genre")' class="">
                            <i class="glyphicon glyphicon-object-align-horizontal"></i>
                            <span>Genre</span>
                           
                        </a>
                    </li>
                    <!--End Genre Navigation -->

                    <!--Staff Navigation -->
                    <li class="sub-menu">
                        <a href='@Url.Action("Index","Staff")' class="">
                            <i class="glyphicon glyphicon-user"></i>
                            <span>Staff</span>

                        </a>
                    </li>
                    <!--End Staff Navigation -->


                    <!--Author Navigation -->
                    <li class="sub-menu">
                        <a href='@Url.Action("Index","Author")' class="">
                            <i class="glyphicon glyphicon-book"></i>
                            <span>Author</span>

                        </a>
                    </li>
                    <!--End Author Navigation -->

                    <!--Producer Navigation -->
                    <li class="sub-menu">
                        <a href='@Url.Action("Index","Producer")' class="">
                            <i class="glyphicon glyphicon-book"></i>
                            <span>Producer</span>

                        </a>
                    </li>
                    <!--End Producer Navigation -->

                </ul>
                <!-- sidebar menu end-->
            </div>
        </aside>
        <!--sidebar end-->

        <!--main content start-->

        <div class="content" style="padding-top:100px; padding-left: 220px">
           

            @RenderBody()

            
        </div>
  

</body>
</html>
