    <script>
        function addToWishList(id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("AddToWishList", "WishList")',
                data: { id: id },
                dataType: "text",
                success: function (resultData) {
                    if (resultData == false) {
                        iziToast.info({
                            title: 'Hey',
                            message: 'Wishlist had previously been added'
                        });

                    }
                    else {
                        document.getElementById("wishlistCount").innerHTML = resultData;
                        iziToast.info({
                            title: 'Operation Completed',
                            message: '+1',
                            position: 'topRight',
                            transitionIn: 'fadeInDown'
                        });
                    }
                }
            })

        }
        function RemoveWatchList(id) {

            swal({
                title: 'WishList Delete Operation',
                text: "Are you sure you want to continue ?",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("RemoveWishList", "WishList")',
                    data: { id: id },
                    dataType: "text",
                    success: function (resultData) {
                        if (resultData == 0) {
                            window.location = '@Url.Action("Index","Home")';
                        }
                        document.getElementById("wishlistCount").innerHTML = resultData;
                        document.getElementById('wishlist' + id).setAttribute("hidden", "");
                        iziToast.info({
                            title: 'Operation Completed',
                            message: '1 Item Removed',
                            position: 'topRight'
                        });
                    }
                })

            }, function (dismiss) {
                // dismiss can be 'cancel', 'overlay',
                // 'close', and 'timer'
                if (dismiss === 'cancel') {
                    swal(
                      'Aborted',
                      'Operation Aborted by user',
                      'info'
                    )
                }
            })
        }

