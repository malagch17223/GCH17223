@model BSMS.bsms.localhost.USER

@{
    ViewBag.Title = "Login";
}

    <!-- Breadcrumbs -->
<div class="breadcrumb-container">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href='@Url.Action("Index","Home")'>Home</a></li>
            <li class="active">Login</li>
        </ol>
    </div>
</div>
<!-- End Breadcrumbs -->


<div class="container m-t-3">

    <!-- Main Content -->

    <div class="row">
        <div class="col-sm-6 col-xs-12 login-register-form m-b-3">
            <div class="title"><span>Please Enter Your Information</span></div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label for="emailInputLogin">Email address</label>
                    <input type="text" name="username" class="form-control form-control-line" id="emailInputLogin" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <label for="passwordInputLogin">Password</label>
                    <input type="password" name="password" class="form-control form-control-line" id="passwordInputLogin" placeholder="Password" required>
                </div>
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"><span> Remember me</span>
                        </label>
                    </div>
                    <button type="submit" class="btn btn-default btn-theme"><i class="fa fa-long-arrow-right"></i> Login</button>
                    <a href='@Url.Action("ForgetPassword","Authentication")' class="btn btn-default btn-theme pull-right">Forgot password ?</a>
            }

        </div>
        <!-- End Login Form -->
        <!-- Alternative Login Button -->
        <div class="col-sm-6 col-xs-12">
            <div class="title"><span>Or Login Using</span></div>
            <button type="button" class="btn btn-primary btn-md"><i class="fa fa-facebook"></i> Facebook</button>
            <button type="button" class="btn btn-info btn-md"><i class="fa fa-twitter"></i> Twitter</button>
            <button type="button" class="btn btn-danger btn-md"><i class="fa fa-google-plus"></i> Google Plus</button>
        </div>
        <!-- End Alternative Login Button -->

    </div>


    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

    <!--
        Message Display
    -->


    @if (!String.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <script>
            var message = '@ViewBag.ErrorMessage';
            swal(
                  'Login Error!',
                    message,
                  'error'
                )
        </script>
    }

</div>
